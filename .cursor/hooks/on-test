#!/bin/bash
# Cursor Hook: on-test
# 测试开始时触发

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CURSOR_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"

# 加载工具函数
source "${CURSOR_ROOT}/lib/hook_utils.sh"

# 初始化
init_log
log_info "========================================="
log_info "触发 Hook: on-test"
log_info "========================================="

# 获取测试命令
TEST_COMMAND="$1"
TEST_TYPE="${2:-unit}"

log_info "测试命令: ${TEST_COMMAND}"
log_info "测试类型: ${TEST_TYPE}"

# 构建事件数据
EVENT_TYPE="test_start"
EVENT_DATA=$(cat <<EOF
{
    "command": "$(json_escape "$TEST_COMMAND")",
    "type": "${TEST_TYPE}",
    "timestamp": $(date +%s)
}
EOF
)

log_debug "事件数据: ${EVENT_DATA}"

# 发送到オルテンシア
log_info "发送事件到オルテンシア..."

load_config

if [ -f "${VENV_PATH}/bin/activate" ]; then
    source "${VENV_PATH}/bin/activate"
    
    python "${CURSOR_ROOT}/lib/websocket_sender.py" \
        --event "${EVENT_TYPE}" \
        --message "开始测试..." \
        --data "${EVENT_DATA}" \
        2>> "${LOG_FILE}"
    
    SEND_RESULT=$?
    deactivate
    
    if [ $SEND_RESULT -eq 0 ]; then
        log_info "✅ on-test hook 执行成功"
    else
        log_error "❌ on-test hook 执行失败 (exit code: ${SEND_RESULT})"
    fi
else
    log_error "❌ Python 虚拟环境不存在: ${VENV_PATH}"
fi

log_info "========================================="
exit 0

