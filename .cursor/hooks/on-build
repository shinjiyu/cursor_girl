#!/bin/bash
# Cursor Hook: on-build
# 构建开始时触发

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CURSOR_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"

# 加载工具函数
source "${CURSOR_ROOT}/lib/hook_utils.sh"

# 初始化
init_log
log_info "========================================="
log_info "触发 Hook: on-build"
log_info "========================================="

# 获取构建命令和类型
BUILD_COMMAND="$1"
BUILD_TYPE="${2:-unknown}"

log_info "构建命令: ${BUILD_COMMAND}"
log_info "构建类型: ${BUILD_TYPE}"

# 构建事件数据
EVENT_TYPE="build_start"
EVENT_DATA=$(cat <<EOF
{
    "command": "$(json_escape "$BUILD_COMMAND")",
    "type": "${BUILD_TYPE}",
    "timestamp": $(date +%s)
}
EOF
)

log_debug "事件数据: ${EVENT_DATA}"

# 发送到オルテンシア
log_info "发送事件到オルテンシア..."

load_config

if [ -f "${VENV_PATH}/bin/activate" ]; then
    source "${VENV_PATH}/bin/activate"
    
    python "${CURSOR_ROOT}/lib/websocket_sender.py" \
        --event "${EVENT_TYPE}" \
        --message "开始构建..." \
        --data "${EVENT_DATA}" \
        2>> "${LOG_FILE}"
    
    SEND_RESULT=$?
    deactivate
    
    if [ $SEND_RESULT -eq 0 ]; then
        log_info "✅ on-build hook 执行成功"
    else
        log_error "❌ on-build hook 执行失败 (exit code: ${SEND_RESULT})"
    fi
else
    log_error "❌ Python 虚拟环境不存在: ${VENV_PATH}"
fi

log_info "========================================="
exit 0

