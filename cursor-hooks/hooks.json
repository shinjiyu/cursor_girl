{
  "version": 1,
  "hooks": {
    "beforeShellExecution": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/beforeShellExecution.py"
      }
    ],
    "afterShellExecution": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/afterShellExecution.py"
      }
    ],
    "beforeMCPExecution": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/beforeMCPExecution.py"
      }
    ],
    "afterMCPExecution": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/afterMCPExecution.py"
      }
    ],
    "afterFileEdit": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/afterFileEdit.py"
      }
    ],
    "beforeReadFile": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/beforeReadFile.py"
      }
    ],
    "beforeSubmitPrompt": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/beforeSubmitPrompt.py"
      }
    ],
    "afterAgentResponse": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/afterAgentResponse.py"
      }
    ],
    "stop": [
      {
        "command": "$HOME/.cursor-agent/run_hook.sh $HOME/.cursor-agent/hooks/stop.py"
      }
    ]
  }
}

